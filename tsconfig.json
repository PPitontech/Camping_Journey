{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
